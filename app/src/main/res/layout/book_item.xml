<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="#d7ccc8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        app:cardElevation="6dp"
        android:background="#f9f9f9"
        app:cardBackgroundColor="#f9f9f9"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="#f9f9f9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="SHUBHAM MOTORS"

        android:gravity="center_vertical"
        android:id="@+id/book_vendor_name"
        android:textColor="#303038"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:id="@+id/book_date"
                android:text="20-may-2017"
                android:textColor="@color/fadetext"/>

            <TextView
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:id="@+id/book_otp"
                android:layout_weight="1"
                android:text="OTP : 5657"

                android:textColor="@color/fadetext"/>



        </LinearLayout>


        <TextView
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:id="@+id/book_id"
            android:text="Booking No. - # 56"

            android:textColor="@color/fadetext"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c0c0"></View>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <TextView
            android:drawableLeft="@drawable/currency_inr"
            android:paddingLeft="10dp"
            android:textColor="#303038"
            android:id="@+id/booking_amount"
            android:text="10"
            android:gravity="center_vertical"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        17yy<TextView
            android:drawableLeft="@drawable/ic_directions_walk_black_24dp"
            android:gravity="center_vertical"
            android:text="pending"
            android:textColor="#303038"
            android:id="@+id/order_status"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




    </LinearLayout>



</LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
