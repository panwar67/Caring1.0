<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_selection">

    <LinearLayout
        android:background="@drawable/white_shadow"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3">

            <ImageView
                android:background="@drawable/white_shadow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|center_vertical"

                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_directions_car_black_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView

                android:textColor="@color/colorPrimary"
                android:id="@+id/car_name_garage"
                android:text="Your_Car_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:textColor="@color/colorPrimary"
                android:id="@+id/car_model_garage"
                android:text="Your_Car_Model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/car_brand_garage"
                android:text="Your_Car_Brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/car_year_garage"
                android:text="Your_Car_Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>




    </LinearLayout>

</LinearLayout>