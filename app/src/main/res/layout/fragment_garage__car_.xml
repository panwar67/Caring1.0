<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lions.torque.caring.servicecar.Garage_Car_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:background="#f9f9f9"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#f9f9f9"

        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#f9f9f9"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_weight="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#f9f9f9"
                    android:layout_marginLeft="10dp"

                    android:layout_gravity="center_vertical"

                    android:layout_marginBottom="10dp"
                    android:src="@drawable/garage_pro"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:id="@+id/car_model_garage"
                    android:text="Your_Car_Model"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/car_brand_garage"
                    android:text="Your_Car_Brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView

                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="@color/fadetext"
                    android:id="@+id/car_year_garage"
                    android:text="Your_Car_Year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="@color/fadetext"
                    android:id="@+id/car_name_garage"
                    android:text="Your_Car_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>




        </LinearLayout>


        <TextView

            android:layout_marginBottom="10dp"
            android:textColor="@color/fadetext"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:id="@+id/swipe_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SWIPE RIGHT"/>

    </android.support.v7.widget.CardView>


</FrameLayout>
