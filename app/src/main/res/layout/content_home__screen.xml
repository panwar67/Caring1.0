                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:src="@drawable/qkey"

                        android:id="@+id/key_service"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />

                    <TextView
                        android:textSize="10dp"

                        android:id="@+id/key_services_text"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KEY"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"/>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:src="@drawable/qmeter"

                        android:id="@+id/gauges_service"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />

                    <TextView
                        android:textSize="10dp"

                        android:id="@+id/gauges_services_text"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GAUGES"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_weight="1"
                    >

                    <ImageView

                        android:src="@drawable/qairconditioner"
