            android:textColor="#303038"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:id="@+id/head_essen"
            android:layout_height="wrap_content"
            android:text="Essentials"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="#c8cdd1"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#c8cdd1"
                    app:cardElevation="6dp">


                <LinearLayout
                    android:paddingBottom="10dp"
                    android:background="#c8cdd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <ImageView

                        android:layout_marginTop="10dp"
                        android:id="@+id/wind_service"
                        android:src="@drawable/qwindshield"
                        android:layout_width="80dp"
                        android:layout_gravity="center"
                        android:layout_height="80dp" />

                    <TextView

                        android:layout_marginTop="10dp"
                        android:text="WIND SHIELD"
                        android:textSize="10dp"

                        android:textAlignment="center"
                        android:textColor="#303038"
                        android:id="@+id/wind_services_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"

                    android:layout_marginLeft="-5dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="#c8cdd1"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#c8cdd1"
                    app:cardElevation="6dp">

                <LinearLayout

                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#c8cdd1"
                    android:orientation="vertical">

                    <ImageView
                        android:rotation="90"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/qalignment"
                        android:id="@+id/aligment_service"
                        android:layout_width="80dp"
                        android:scaleType="center"
                        android:layout_gravity="center"
                        android:layout_height="80dp" />

                    <TextView
                        android:textSize="10dp"

                        android:id="@+id/alignment_services_text"
                        android:text="ALIGNMENT"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textColor="#303038"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                </android.support.v7.widget.CardView>






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView

                    android:layout_marginTop="-10dp"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="#c8cdd1"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#c8cdd1"
                    app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#c8cdd1"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_marginTop="10dp"
                        android:id="@+id/body_service"
                        android:src="@drawable/qbodyshop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView


                        android:layout_marginTop="15dp"
                        android:textSize="10dp"
                        android:text="BODY SHOP"
                        android:textAlignment="center"
                        android:textColor="#303038"
                        android:id="@+id/body_services_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_marginTop="-10dp"

                    android:layout_marginLeft="-5dp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="#c8cdd1"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#c8cdd1"
                    app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:paddingBottom="10dp"
                    android:background="#c8cdd1"
                    android:orientation="vertical">

                    <ImageView

                        android:textSize="10dp"

                        android:layout_marginTop="10dp"
                        android:src="@drawable/qfullserv"
                        android:id="@+id/full_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/full_service_services_text"
                        android:text="FULL SERVICE"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="#303038"
                        android:textSize="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                </android.support.v7.widget.CardView>






            </LinearLayout>




        </LinearLayout>


























