                    android:layout_marginLeft="-5dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"

                    android:layout_weight="1"
                    app:cardBackgroundColor="#ff5722"
                    app:cardElevation="6dp">

