                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="#01579b"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#ff5722"
                    app:cardElevation="6dp">

                    <LinearLayout

