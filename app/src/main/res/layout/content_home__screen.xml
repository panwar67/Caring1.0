                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:id="@+id/access_services_text"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ACCESSORIES"
                            android:textAlignment="center"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="#01579b"
                    android:layout_weight="1"

                    android:layout_marginLeft="-5dp"
                    app:cardBackgroundColor="#ff5722"
                    app:cardElevation="6dp">

                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/suspension_service"
                            android:src="@drawable/qsuspension"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView

                            android:textSize="10dp"

                            android:id="@+id/suspension_services_text"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SUSPENSION"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"

                    android:layout_marginLeft="-5dp"
                    android:background="#01579b"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#ff5722"
                    app:cardElevation="6dp">

                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:src="@drawable/qbumper"
                            android:id="@+id/bumper_service"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"/>

                        <TextView

                            android:textSize="10dp"

                            android:id="@+id/bumper_services_text"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BUMPER"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>





            </LinearLayout>






        </LinearLayout>

        <TextView
